<UserControl x:Class="Mapper.Gui.ToolbarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mapper.Gui"
             mc:Ignorable="d" 
             UseLayoutRounding="True"
             BorderBrush="#FF3F3F3F" BorderThickness="1"
             Background="#FF1C1C1C" 
             Width="Auto" Height="35" Loaded="UserControl_Loaded">

    <UserControl.Effect>
        <DropShadowEffect Direction="-75" ShadowDepth="2" Opacity="5" BlurRadius="6" Color="Black"/>
    </UserControl.Effect>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Template/ToolButton.xaml"/>
                <ResourceDictionary Source="/Resources/Template/ToolButtonImage.xaml"/>
                <ResourceDictionary Source="/Resources/Template/ToolButtonTextBlock.xaml"/>
                <ResourceDictionary Source="/Resources/Template/ToolTip.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="ButtonContainer" />
</UserControl>
