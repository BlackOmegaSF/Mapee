<UserControl x:Class="Mapper.Gui.DimensionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mapper.Gui"
             mc:Ignorable="d" 
             Background="#FF1C1C1C"
             BorderBrush="#FF3F3F3F" BorderThickness="1"
             Width="Auto" Height="35" Loaded="UserControl_Loaded">

    <UserControl.Effect>
        <DropShadowEffect Direction="-75" ShadowDepth="2" Opacity="5" BlurRadius="6" Color="Black"/>
    </UserControl.Effect>

    <Grid x:Name="DimensionContainer" Margin="0, 0, 4, 0" />
</UserControl>
